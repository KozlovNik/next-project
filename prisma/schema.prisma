generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  email     String     @unique
  firstName String
  lastName  String
  password  String
  phone     String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @default(now())
  address   String
  Feedback  Feedback[]
}

model Category {
  id       Int       @id @default(autoincrement())
  name     String
  slug     String
  products Product[]
}

model Country {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  products Product[]
}

model Brand {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  products Product[]
}

model Cart {
  id        Int        @id @default(autoincrement())
  cartItems CartItem[]
}

model Product {
  id          Int        @id @default(autoincrement())
  name        String     @unique
  slug        String     @unique
  price       Float
  material    String?
  about       String
  categoryId  Int
  ingredients String?
  roasting    String?
  weight      String?
  countryId   Int
  brandId     Int
  brand       Brand      @relation(fields: [brandId], references: [id])
  category    Category   @relation(fields: [categoryId], references: [id])
  country     Country    @relation(fields: [countryId], references: [id])
  cartItems   CartItem[]
  Feedback    Feedback[]
}

model CartItem {
  id        Int     @id @default(autoincrement())
  quantity  Int
  productId Int
  cartId    Int
  cart      Cart    @relation(fields: [cartId], references: [id])
  product   Product @relation(fields: [productId], references: [id])
}

model Feedback {
  id           Int       @id @default(autoincrement())
  userid       Int
  productid    Int
  comment      String
  rating       Int
  date_created DateTime @default(now())
  Product      Product  @relation(fields: [productid], references: [id])
  User         User     @relation(fields: [userid], references: [id])

  @@unique([userid, productid], name: "Feedback_userid_productid_key")
}
